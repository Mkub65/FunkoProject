@page "/ProfilePage"
@attribute [Authorize]
@using FunkoProject.Web.Components.Modals
@using Microsoft.AspNetCore.Authorization

<div class="container mt-5">
    <h2>Profil użytkownika</h2>

    <div class="row">
        <div class="col-md-4">
            <img src="@user.RoleId" alt="Profile Image" class="img-fluid rounded-circle" style="width: 200px; height: 200px;" />
        </div>
        <div class="col-md-8">
            <h3>@user.FirstName @user.LastName</h3>
            <p><strong>Email:</strong> @user.Email</p>
            <p><strong>Data urodzenia:</strong> @user.DateOfBirth.ToString()</p>
            <p><strong>Ilość figurek:</strong> @user.Id</p>

            <button class="btn btn-primary" @onclick="OpenEditModal">Edytuj profil</button>
        </div>
    </div>
    
@if (isEditModalOpen)
    {
        <UserEditModal User="user" OnSave="SaveChanges" OnCancel="CloseEditModal" />
    }
    
</div>
